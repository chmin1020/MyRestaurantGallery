<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="locationResult"
            type="com.fallTurtle.myrestaurantgallery.data.retrofit.value_object.LocationInfo" />
    </data>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@drawable/map_list_border">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@{locationResult.name}"
        android:textColor="@color/regularText"
        android:textSize="18sp"
        android:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:autoSizeTextType="uniform"
        android:text="@{locationResult.fullAddress}" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="@{locationResult.category}"
        android:textColor="#0FB60F"
        android:autoSizeTextType="uniform" />

</LinearLayout>
</layout>