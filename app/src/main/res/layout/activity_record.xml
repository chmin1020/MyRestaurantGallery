<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="info"
            type="com.fallTurtle.myrestaurantgallery.model.room.Info" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/tv_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.06"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            app:menu="@menu/record_activity_menu"
            app:titleTextAppearance="@style/toolbarText" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{info.date}"
            android:textSize="22sp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:background="@drawable/date_sign"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/ll_image"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="@id/toolbar"
            app:layout_constraintWidth_percent="0.68"
            app:layout_constraintHeight_percent="0.06"/>

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/grid_border"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintBottom_toTopOf="@id/rb_ratingBar"
            app:layout_constraintStart_toStartOf="@id/tv_date"
            app:layout_constraintEnd_toEndOf="@id/tv_date"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.28">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:scaleType="centerInside"
                android:src="@drawable/korean_food"
                android:contentDescription="@string/item_image_description"
                app:imagePath="@{info.imagePath}"
                app:categoryNum="@{info.categoryNum}"/>

        </LinearLayout>

        <RatingBar
            android:id="@+id/rb_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:numStars="5"
            android:rating="@{info.rate}"
            android:stepSize="1"
            android:isIndicator="true"
            app:layout_constraintTop_toBottomOf="@id/ll_image"
            app:layout_constraintBottom_toTopOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="@id/ll_image"
            app:layout_constraintEnd_toEndOf="@id/ll_image"
            app:layout_constraintHeight_percent="0.06"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="@{info.name}"
            android:textColor="@color/regularText"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding ="10dp"
            app:layout_constraintTop_toBottomOf="@id/rb_ratingBar"
            app:layout_constraintBottom_toTopOf="@id/tv_category"
            app:layout_constraintStart_toStartOf="@id/rb_ratingBar"
            app:layout_constraintEnd_toEndOf="@id/rb_ratingBar"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.06"/>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{info.category}"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding ="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintBottom_toTopOf="@id/tv_location"
            app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="@id/tv_name"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.06"/>

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@{info.location}"
            android:textColor="@color/regularText"
            android:textAlignment="center"
            android:textSize="20sp"
            android:maxLines="1"
            android:padding ="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_category"
            app:layout_constraintBottom_toTopOf="@id/tv_memo"
            app:layout_constraintStart_toStartOf="@id/tv_category"
            app:layout_constraintEnd_toEndOf="@id/tv_category"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.06"/>

        <TextView
            android:id="@+id/tv_memo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"
            android:gravity="start"
            android:text="@{info.memo}"
            android:textSize="18sp"
            android:textColor="@color/regularText"
            android:padding ="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_location"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tv_location"
            app:layout_constraintEnd_toEndOf="@id/tv_location"
            app:layout_constraintHeight_percent="0.28"
            app:layout_constraintWidth_percent="0.9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>